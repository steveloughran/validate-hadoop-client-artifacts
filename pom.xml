    </profile>

    <profile>
      <id>branch-3.3</id>
      <properties>
        <hadoop.version>3.3.9-SNAPSHOT</hadoop.version>
      </properties>
    </profile>


  </profiles>


  <build>
    <pluginManagement><!-- lock down plugins versions to avoid using Maven defaults (may be moved to parent pom) -->
